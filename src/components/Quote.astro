---
interface Props {
  author?: string;
  authorLink?: string;
  source?: string;
  sourceLink?: string;
}

const { author, authorLink, source, sourceLink } = Astro.props;

const quote = 'Default Quote - Please update me!';
---

<div class="rounded-box relative flex min-h-fit w-2/5 flex-col justify-center bg-neutral text-neutral-content">
  <div class="card-body items-center text-center">
    <blockquote class="quote flex-none text-justify font-jandaElegant text-3xl text-secondary">
      <p><slot>{quote}</slot></p>
    </blockquote>
    <figcaption class="flex w-full items-center justify-center">
      <div class="card-title w-full text-4xl">
        {
          author && (
            <a
              class="author !link-hover link items-start font-nekonium !text-primary"
              href={authorLink}
              target="_blank"
              rel="noopener noreferrer"
            >
              {author}
            </a>
          )
        }
        {
          author && source && (
            <a
              class="source !link-hover link items-end font-nekonium !text-primary-content"
              href={sourceLink}
              target="_blank"
              rel="noopener noreferrer"
            >
              {source}
            </a>
          )
        }
      </div>
    </figcaption>
  </div>
</div>

<style lang="scss">
  .author {
    min-width: 50%;
    text-align: start;
  }
  .source {
    min-width: 50%;
    text-align: end;
  }
  :global(.quote) {
    quotes: '«' '»';
    display: flex;
  }
  .quote::before {
    content: open-quote;
    font-size: 4rem;
    align-self: flex-start;
    @apply text-secondary-content;
  }
  .quote::after {
    content: close-quote;
    font-size: 4rem;
    align-self: flex-end;
    @apply text-secondary-content;
  }
</style>
